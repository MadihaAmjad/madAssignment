<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="57dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:text="Detail"
        android:textColor="#CCCCCC"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="120dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="71dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flo"
        android:layout_width="195dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/f1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/flo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flo"
        android:layout_marginTop="8dp"
        android:text="Alovera"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flo" />

    <TextView
        android:id="@+id/flo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flo1"
        android:layout_marginTop="12dp"
        android:text="Regular Price $195.00"
        android:textColor="#CC9B9B"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flo1" />

    <Button
        android:id="@+id/flo3"
        android:layout_width="44dp"
        android:layout_height="100px"
        android:layout_below="@+id/flo2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corners"
        android:text="+"

        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flo2"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/flo4"
        android:layout_width="23dp"
        android:layout_height="42dp"
        android:layout_below="@id/flo2"

        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/flo3"
        android:text="1"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/flo3"
        app:layout_constraintTop_toBottomOf="@+id/flo2" />

    <Button
        android:id="@+id/button"
        android:layout_width="49dp"
        android:layout_height="100px"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/flo4"
        android:background="@drawable/rounded_corners"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toEndOf="@+id/flo4"
        app:layout_constraintTop_toBottomOf="@+id/flo2"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:layout_width="149dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/flo2"
        app:layout_constraintVertical_bias="0.028" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:padding="10dp"
        android:text="It's a long established fact that a reader will be distracted by the read-able contact of a page when looking at it's layout"
        android:textAlignment="center"
        android:textColor="#CCCCCC"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:layout_width="325dp"
        android:layout_height="77dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_corners"
        android:padding="20dp"
        android:text="Buy Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.112" />

</androidx.constraintlayout.widget.ConstraintLayout>
